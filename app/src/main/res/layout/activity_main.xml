<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_marker"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:rippleColor="@color/colorAccent"/>

   <TextView
    android:id="@+id/top_places"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Top Places"
    android:textSize="20sp"
    android:textColor="#000"
    android:textStyle="bold"
    android:layout_margin="12dp"/>

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/top_places">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">
           <ImageView
               android:layout_width="210dp"
               android:layout_height="180dp"
               android:layout_margin="4dp"
               android:background="@drawable/sanfransico"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/singapore"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/statueliberty"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/tajmahal"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/eiffeltower"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/operahousesydney"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/thechinawall"/>

        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/park_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parks"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:layout_below="@+id/scroll"/>

    <HorizontalScrollView
        android:id="@+id/scrolltwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/park_places">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">
            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/archespark"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/sundarbanspark"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/kazirangapark"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/zion"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/yellowstonepark"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/jasperpark"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:background="@drawable/yosemitepark"/>

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
